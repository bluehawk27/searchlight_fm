#podcasts {
  padding-bottom: 3rem;
  ul {
    list-style: none;
    padding-left: 0;
    margin: 0;
    li{
      width: 23%;
      float: left;
      margin: 0 1% 2rem 1%;
      border-radius: .35rem;
      -webkit-box-shadow: 0 1px 1px 0 rgba(0,0,0,0.25);
      box-shadow: 0 1px 1px 0 rgba(0,0,0,0.25);
      img{
        width: 100%;
        max-width: 100%;
        border-radius: .35rem;
      }
      .podcast-overview {
        padding: 1rem 7.5%;
        h2 {
          margin: 0;
          font-size: 1rem;
          font-weight: 700;
          color: $dark;
        }
        .episode-count {
          color: lighten($dark, 50%);
          font-size: .9rem;
          margin: .5rem 0 .25rem 0;
        }
      }
      &:hover {
        img {
          opacity: .8;
        }
        .podcast-overview {
          h2 {
            color: $highlight;
          }
        }
      }
    }
  }
}

//----------- Podcasts_showpage---------------//

#podcast-show {
  #show-banner {
    background: $dark;
    text-align: center;
    padding: 3rem 0;
    h1 {
      font-size: 2.5rem;
      font-weight: 300;
      color: $white;
      margin: 0 0 .5rem 0;
    }
    .description {
      width: 85%;
      line-height: 1.75;
      margin: 0 auto 2rem auto;
      color: lighten($dark, 20%)
    }
    .subscribe-link, .submit {
      font-size: .6rem;
      text-transform: uppercase;
      font-weight: 700;
      text-align: center;
      color: $white;
      display: inline;
      background: $highlight;
      border-radius: 2rem;
      padding: .5rem 1rem;
      margin: 0 .5rem;
      text-decoration: none;
      &:hover {
        background: darken($highlight, 10%)
      }
    }
    #search {
      text-align: center;
      .search-field {
        margin: .5rem 0 1rem 22.5%;
        width: 50%;
        text-align: center;
      }
    }
  }
  #breadcrumb {
    padding: 1rem 0;
    text-align: center;
    border-bottom: 1px solid lighten($dark, 75%);
    font-weight: 700;
    font-size: .7rem;
    a {
      text-decoration: none;
      color: lighten($dark, 25%)
    }
    span {
      margin: 0 .5rem;
    }
  }
  #episodes {
    padding: 3rem 0;
    ul {
      list-style: none;
      padding-left: 0;
      li {
        padding-bottom: 2rem;
        border-bottom: 1px solid lighten($dark, 75%);
        margin-bottom: 2rem;
        &:last-child{
          border-bottom: none;
        }
        .episode-thumbnail {
          width: 22%;
          float: left;
          img {
            width: 10rem;
            max-width: 100%;
            border-radius: .35rem;
          }
        }
        .episode-overview {
          width: 76.5%;
          float: left;
          margin-left: 1.5%;
          h2 {
            margin-top: 0;
            a {
              color: $dark;
              text-decoration: none;
            }
          }
          .description {
            color: lighten($dark, 25%);
          }
          .authorized-links {
            font-weight: 700;
            font-size: .9rem;
            a {
              text-decoration: none;
              color: $highlight;
              margin-right: 1rem;
              &:hover {
                color: $dark;
              }
            }
          }
        }
      }
    }
  }
  #episode-content {
    padding: 4rem 0;
    margin-bottom: 4rem;
    border-bottom: 1px solid lighten($dark, 75%);
    .current-episode-thumbnail {
      display: block;
      margin: 0 auto 2rem auto;
      width: 10rem;
      max-width: 100%;
      border-radius: .35rem;
    }
    h2 {
      font-size: 1.5rem;
      text-align: center;
    }
    .description {
      text-align: center;
      font-size: .9rem;
      line-height: 1.7;
      color: lighten($dark, 25%);
    }
    a {
      text-decoration: none;
    }
    .jp-jplayer,.jp-audio {
    width: 70%;
    margin: 3rem auto .5rem auto;
    }
    .jp-title {
      font-size: 12px;
      text-align: center;
      color: #999;
    }
    .jp-title ul {
      padding: 0;
      margin: 0;
      list-style: none;
    }
    .jp-gui {
      position: relative;
      background: $highlight;
      transition: background .4s ease-in-out;
      border-radius: 0.1875rem;
      overflow: hidden;
      margin-top: 0.625rem;
    }
    .jp-controls {
      padding: 0;
      margin: 0;
      list-style: none;
      font-family: "FontAwesome";
    }

    .jp-controls li {
      display: inline;
    }

    .jp-controls a {
      color: #fff;
    }
    .jp-play,.jp-pause {
      width: 3.75rem;
      height: 2.5rem;
      display: inline-block;
      text-align: center;
      line-height: 2.688rem;
      border-right: 1px solid lighten($highlight, 10%);
    }

    .jp-controls .jp-play:hover,.jp-controls .jp-pause:hover {
      background-color: darken($highlight, 10%);
    }

    .jp-mute,.jp-unmute {
      position: absolute;
      right:  3.688rem;
      top: -0.1875rem;
      width: 1.25rem;
      height: 2.5rem;
      display: inline-block;
      line-height: 2.875rem;
    }

    .jp-mute {
      text-align: left;
    }
    .jp-time-holder {
      color: #FFF;
      font-size: .75rem;
      line-height: .875rem;
      position: absolute;
      right: 5.625rem;
      top: .875rem;
    }
    .jp-progress {
      background-color: darken($highlight, 25%);
      border-radius: 1.25rem;
      overflow: hidden;
      position: absolute;
      right: 22%;
      top: 0.9375rem;
      width: 65%;
    }

    .jp-play-bar {
      height:  0.75rem;
      background-color: #fff;
      border-radius: 1.25rem;
    }

    .jp-volume-bar {
      position: absolute;
      right: 0.625rem;
      top: 1.063rem;
      width: 2.813rem;
      height: .5rem;
      border-radius: 1.25rem;
      background-color: darken($highlight, 25%);
      overflow: hidden;
    }

    .jp-volume-bar-value {
      background-color: #fff;
      height: .5rem;
      border-radius: 1.25rem;
    }
  }
  #links {
    padding: 2rem 0;
    text-align: center;
    ul {
      list-style: none;
      padding-left: 0;
      padding: 1rem 0;
      margin-bottom: 1rem;
      border-bottom: 1px solid lighten($dark, 75%);
      .current {
        color: $highlight;
      }
      li {
        display: inline;
        margin-right: 1rem;
        font-weight: 700;
        a {
          color: $dark;
          text-decoration: none;
          &:hover {
            color: $highlight;
          }
        }
      }
    }
  }
}
