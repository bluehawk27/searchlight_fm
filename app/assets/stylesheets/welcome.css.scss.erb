#background {
  background-image: url(<%= asset_path 'searchlightdark.jpg' %>);
  height: auto;
  background-size: cover;
  background-position: center;
  text-align: center;
  background-attachment: fixed;
  header {
    padding: 3rem 0;
    #logo {
      float: left;
      margin-left: 2.5rem;
      text-transform: uppercase;
      font-weight: 700;
      color: $white;
      text-decoration: none;
    }
    nav {
      float: right;
      ul {
        list-style: none;
        margin: 0;
        li {
          display: inline;
          margin-right: 2rem;
          a {
            color: $white;
            font-weight: 400;
            text-decoration: none;
          }
        }
      }
    }
  }
  h1 {
    color: $white;
    font-size: 3.5rem;
    font-weight: 300;
    letter-spacing: 1px;
    margin: 2rem 0 2rem 0
  }
}

.button {
  margin: 1.5rem 2.5% 0 2.5%;
}

