<div id="podcast-show">
  <div id="show-banner">
    <div class="wrapper-skinny">
      <h1>The Searchlight Podcast</h1>
    </div>
  </div>

  <div id="links">
    <div class="wrapper-skinny">
      <ul>
        <li><% link_to "Episodes", root_path %></li>
        <li><%= link_to "New Episode", new_podcast_episode_path(@podcast)%></li>
        <li><%= link_to "Account Settings", edit_podcast_registration_path%></li>
        <li><%= link_to "View Podcast", podcast_path(current_podcast)%></li>
      </ul>
    </div>
  </div>


  <div id="form">
     <div class="wrapper-skinny">
      <h1>Edit Episode</h1>
        <%= render :partial => 'form', :locals => {:podcast => @podcast, :episode => @episode } %>
    </div>
  </div>
</div>