<div id="banner" class="podcasts_banner">
  <h1>Discover your new favorite Podcast</h1>
</div>

<div id="podcasts" class="cf">
  <div class="wrapper">
    <ul class="cf">
      <% @podcasts.each do |podcast| %>
        <%= link_to podcast do %>
          <li>
            <%= image_tag podcast.thumbnail.url(:medium)%>
            <div class="podcast_overview">
              <h2><%= podcast.title %></h2>
              <p class="episode_count">Episode 1</p>
          </div>
        <% end %>
        </li>
      <% end %>
    </ul>
    <%= will_paginate @podcasts %>
  </div>
</div>